#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {
    int n,i,j,u;
    int z=1,x;
    scanf("%d", &n);
    for(i=n;i>=1;i--)
    {
        for(u=n;u>=i;u--){
        if(u==i){
        while(z<=u*2-1){
            printf("%d ",u);
        z++;
        }    
        z=1;        
        }
        else
        printf("%d ",u);
        }
        if(i<n){
        for(j=i+1;j<=n;j++){
            printf("%d ",j);
        }    
        }
printf("\n");
}

for(i=2;i<=n;i++)
    {
        for(u=n;u>=i;u--){
        if(u==i){
        while(z<=u*2-1){
            printf("%d ",u);
        z++;
        }    
        z=1;        
        }
        else
        printf("%d ",u);
        
    
    }
        if(i<n){
        for(j=i+1;j<=n;j++){
            printf("%d ",j);
        }    
        }
printf("\n");
}
    return 0;
}
